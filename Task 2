class DivisionByNull(Exception):
    def __init__(self, txt):
        self.txt = txt

    def divide_by_null(self, divider, devisor):
        try:
            if devisor == 0:
                raise DivisionByNull('ERROR - division by 0')
            return divider / devisor

        except DivisionByNull as err:
            return err


div = DivisionByNull('')
print(div.divide_by_null(30, 10))
print(div.divide_by_null(10, 0))
print(div.divide_by_null(10, 1))
print(div.divide_by_null(100, 0))
