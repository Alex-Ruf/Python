  
list_input = []
while True:
    a = input("Введите любые данные, для отмены ввода введите - ! :")
    if a == "!":
        break
    list_input.append(a)
print(f'Введенный Вами список{list_input}')

for i in enumerate(list_input):
    if i[0] % 2 != 0:
        list_input.insert(i[0] - 1, list_input.pop(i[0]))

print(f'Изменненный Ваш список{list_input}')
