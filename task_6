print('Инструкция.\nВывести заполненные данные нажмите  0\n'
      'Вывести аналитику данных - введите  !'
      )
product = []
i = 0
while True:
    prod_input = input("Введите через пробел данные : Название Цена Количество ед:")
    if prod_input == '0':
        print(product)
        continue
    elif prod_input == '!':
        name = []
        price = []
        count = []
        unit = []
        for a in range(0, i):
            name.append(product[a][1]["Название"])
            price.append(product[a][1]["Цена"])
            count.append(product[a][1]["Количество"])
            unit.append(product[a][1]["Ед"])
        analytics = dict(Название=name, Цена=price, Количество=count, Ед=unit)
        print(analytics)
        break
    prod_input = prod_input.split()
    prod_input = dict(Название=prod_input[0], Цена=(prod_input[1]), Количество=(prod_input[2]), Ед=prod_input[3])
    i += 1
    product_list = (i, prod_input)
    product.append(tuple(product_list))
