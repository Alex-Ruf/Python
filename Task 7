def fact(n):
    for el in range(1, n + 1):
        yield el


def result(a):
    num = 1
    for el in fact(a):
        num *= el
    return num


while True:

    try:
        number = int(input('Factorial:'))
        if number == 0:
            print('Exit')
            break
        elif number < 0:
            print("Enter a positive number!")
        else:
            print(f"Result: {result(number)}")
    except ValueError:
        print('Enter number!')
