class Car:
    def __init__(self, speed, color, name, is_police):
        self.speed = speed
        self.color = color
        self.name = name
        self.is_police = is_police

    def go(self):
        return f'{self.name} is started'

    def stop(self):
        return f'{self.name} is stopped'

    def turn_right(self):
        return f'{self.name} is turned right'

    def turn_left(self):
        return f'{self.name} is turned left'


class TownCar(Car):
    def __init__(self, speed, color, name, is_police):
        super().__init__(speed, color, name, is_police)

    def show_speed(self):
        if self.speed > 60:
            return f"{self.name} Over speed is {self.speed - 60}"
        else:
            return f'Current speed of work car {self.name} is {self.speed}'


class SportCar(Car):
    def __init__(self, speed, color, name, is_police):
        super().__init__(speed, color, name, is_police)

    def show_speed(self):
        return f'Current speed of work car {self.name} is {self.speed}'


class WorkCar(Car):
    def __init__(self, speed, color, name, is_police):
        super().__init__(speed, color, name, is_police)

    def show_speed(self):
        if self.speed > 40:
            return f"{self.name} Over speed is {self.speed - 40}"
        else:
            return f'Current speed of work car {self.name} is {self.speed}'


class PoliceCar(Car):
    def __init__(self, speed, color, name, is_police):
        super().__init__(speed, color, name, is_police)

    def show_speed(self):
        return f'Current speed of work car {self.name} is {self.speed}'


bus = TownCar(80, 'Red', 'bus', False)
audi = SportCar(200, 'Red', 'Audi', False)
bmw = TownCar(130, 'White', 'BMW', False)
lada = WorkCar(100, 'Black', 'Lada', False)
ford = PoliceCar(110, 'Green', 'Ford', True)

print(lada.turn_left())
print(f'When {bmw.turn_right()}, then {audi.stop()}')
print(lada.show_speed())
print(f'{lada.name} is {lada.color}')
print(f'Is {ford.name} a police car? {ford.is_police}')
print(f'Is {lada.name}  a police car? {lada.is_police}')
print(audi.show_speed())
print(bmw.show_speed())
print(ford.show_speed())
