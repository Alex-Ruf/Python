def my_func(x, y):
    result = 1
    y = abs(y)

    for i in range(0, y):
        result = result * x
    return 1 / result


try:
    x = float(input("Input X: "))

    while x < 0:
        x = float(input("Input positive number X: "))
    y = int(input("Input Y: "))
    while y > 0:
        y = int(input("Input  number Y: "))
    print(f"Result {my_func(x, y)}")
except ValueError:
    print("ERRORE-Input  number")
